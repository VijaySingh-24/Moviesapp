<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/const_Search"
    android:background="@drawable/bg_resent_search_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/iv_icon_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_serchProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Mobiles"
        android:textSize="12sp"
        android:layout_marginStart="8dp"

        app:layout_constraintStart_toEndOf="@+id/iv_icon_search"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_search"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_search"
        />






</androidx.constraintlayout.widget.ConstraintLayout>